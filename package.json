{
  "name": "react-travel-app-backend",
  "version": "1.0.0",
  "description": "backend for react travel app",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node --inspect=5858 -r ts-node/register src/app.ts",
    "build": "tsc -p ."
  },
  "author": "DELANOS",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.10.2",
    "tsyringe": "^4.3.0",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.11",
    "nodemon": "^2.0.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
