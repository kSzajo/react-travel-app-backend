{
  "name": "react-travel-app-backend",
  "version": "1.0.0",
  "description": "backend for react travel app",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "build": "tsc -p ."
  },
  "author": "DELANOS",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.11",
    "nodemon": "^2.0.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}